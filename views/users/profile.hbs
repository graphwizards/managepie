{{#if err}}
<div class="ui red message">
  <i class="icon close"></i>
  {{error}}
</div>
  
{{/if}}

{{#if success}}
<div class="ui green message">
  <i class="icon close"></i>
  {{success}}
</div>
  
{{/if}}


<div class="ui  basic  segment  ">
    <div class="ui   stackable grid padded ">
<div class="ui three wide column  px-0" >
 
 

<div class="ui basic segment w-100">
     <img src="https://avatars1.githubusercontent.com/u/51864370?s=460&u=dd3f1e49e652e0a492b33bfd07539c109212cdf6&v=4" class=" ui bordered circular image w-100">
     
    <div class="content pt-4 text-center">
      <div class="ui large header m-0">{{user.instName}} </div>
      <div class=" text-primary mb-4">
        <span class="date">   {{user.city}}, {{user.state}}  </span>
      </div>
      <a href="#" class="ui fluid basic raised  button bg-light"><i class="icon edit mr-3"></i> Edit Profile</a>
    </div>
</div>

<div class="ui basic segment w-100">
    <div class="ui relaxed divided list">
  <div class="item">
    <i class="grey mail middle aligned icon"></i>
    <div class="content">
      <div class="description">{{user.email}}</div>
    </div>
  </div>

  <div class="item">
    <i class="grey phone middle aligned icon"></i>
    <div class="content">
      <div class="description">{{user.mobile}}</div>
    </div>
  </div>

    <div class="item">
    <i class="grey map marker middle aligned icon"></i>
    <div class="content">
      <div class="description">{{user.street}}</div>
    </div>
  </div>
  
 
</div>
</div>
 
 <div class="ui basic segment">
   <div class="ui divider"></div>
     <div class="ui   header mb-1">{{plan.name}} Plan
    <div class="ui grey small sub header mt-2">
           â‚¹  {{plan.cost}} / - {{plan.duration}} {{plan.durationPeriod}}
         </div>
  </div>
         
         <p class="mt-3">
            Start Date : <strong> {{user.startDate}} </strong>
            <br>
            End Date : <strong> {{user.expiryDate}} </strong>
         </p>
         <div class="ui divider"></div>
           <div class="ui header m-0">{{user.fullName}}</div>
          <div class="ui grey sub header mt-2">
       {{user.perMobile}} <br>
   
         </div>
 </div>


    </div>
    <div class="ui thirteen wide column pt-0">
<div class="ui   segment mt-0">
    <div class="ui secondary pointing top menu">
         <a class="item active" data-tab="login">
    Login details
  </a>
 
  <a class="item" data-tab="jobs">
    Requirements
  </a>
   
    <a class="item" data-tab="invoice">
    Invoice  
  </a>
  
</div>
 

 

{{!-- requirements --}}
<div class="ui basic segment tab" data-tab="jobs">
  
</div>

{{!-- login --}}
<div class="ui basic segment active tab" data-tab="login">
  {{#if user.logs}}
  <a href="/users/profile/clearLogs" class="ui   orange label button  ">Crear All</a>
 <table class="ui celled striped table">
  <thead>
    <tr><th colspan="3">
      Login Details
    </th>
  </tr></thead>
  <tbody>
      {{#each user.logs }}
            <tr>
      <td class="collapsing">
         {{this.lastLogin}}
      </td>
      <td> {{this.ip}} </td>
      <td class="right aligned collapsing">
          {{this.location}}
      </td>
    </tr>
      {{/each}}
  
   
  
  
  </tbody>
</table>
{{else}}
<div class="ui basic center aligned segment">
  <div class="ui small header">No Login Detail Found</div>
</div>
    
  {{/if}}

</div>
</div>
</div>
</div>
 